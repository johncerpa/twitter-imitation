<div class="container">
  <nav class="navbar navbar-dark">
    <a class="navbar-brand font-weight-bold" href="<%= home_index_path %>">
      <%= image_tag("twitter_logo.svg", width: 30, height: 30, id: "logo", :class => "d-inline-block align-top") %>
      Twitter
    </a>
  </nav>

  <div class="row justify-content-center" style="min-height: 80%;  min-height: 80vh; display: flex; align-items: center;">
    <div class="col-md-6">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <label>Email address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control gradient-border", placeholder: "Email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-outline-primary btn-block mb-3 btn-round" %>
        </div>
      <% end %>
      <div class="form-group mb-5">
        <%= link_to "Didn't receive unlock instructions?", new_user_confirmation_path %>
      </div>
      <!-- <%= render "devise/shared/links" %> -->
    </div>
  </div>      

</div>